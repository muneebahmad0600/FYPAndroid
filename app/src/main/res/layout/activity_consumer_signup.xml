<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muneebahmad.myapplication.consumer_signup">

    <EditText
        android:id="@+id/et_firstname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="First Name"
        android:background="@android:drawable/editbox_background_normal"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/et_firstname"
        android:layout_alignRight="@+id/et_firstname"
        android:layout_below="@+id/et_firstname"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Last Name"
        android:background="@android:drawable/editbox_background_normal"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/et_lastname"
        android:layout_alignRight="@+id/et_lastname"
        android:layout_below="@+id/et_lastname"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="User Name"
        android:background="@android:drawable/editbox_background_normal"
        android:inputType="textPersonName" />



    <EditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Password"
        android:background="@android:drawable/editbox_background_normal"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_confirmpassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_confirmpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:text="Sign UP" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

</RelativeLayout>
