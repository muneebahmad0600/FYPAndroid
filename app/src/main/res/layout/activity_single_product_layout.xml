<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_product_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleProductLayout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/iv_product_image"
        android:src="@drawable/target_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_below="@+id/iv_product_image"
        android:text="Name :"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#110f0f"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_name"
        android:layout_below="@id/iv_product_image"
        android:layout_toRightOf="@+id/tv_name"
        android:text="Product Name"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price"
        android:layout_below="@+id/tv_name"
        android:text="Price :"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#110f0f"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_price"
        android:layout_below="@id/tv_product_name"
        android:layout_toRightOf="@+id/tv_price"
        android:text="0000.00"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_weight"
        android:layout_below="@+id/tv_price"
        android:text="Weight :"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#110f0f"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_weight"
        android:layout_below="@id/tv_product_price"
        android:layout_toRightOf="@+id/tv_weight"
        android:text="Product Weight"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_category"
        android:layout_below="@+id/tv_weight"
        android:text="Category :"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#110f0f"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_category"
        android:layout_below="@id/tv_product_weight"
        android:layout_toRightOf="@+id/tv_category"
        android:text="Product Category"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/btn_quantity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_category"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:paddingTop="12dp"
        android:text="ADD TO CART"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_marginTop="70dp"
        android:textSize="20sp" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_quantity_minus"
        android:layout_below="@+id/tv_category"
        android:layout_toLeftOf="@+id/btn_quantity"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimary"
        android:text="-"
        android:textSize="30sp"
        android:textColor="#fff"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_quantity_plus"
        android:layout_below="@+id/tv_category"
        android:layout_toRightOf="@+id/btn_quantity"
        android:background="@color/colorPrimary"
        android:layout_marginTop="70dp"
        android:text="+"
        android:textSize="30sp"
        android:textColor="#fff"/>

</RelativeLayout>